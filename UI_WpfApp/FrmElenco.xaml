<Window x:Class="UI_WpfApp.FrmElenco"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI_WpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="White">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="Elenco" Grid.Row="1" Grid.Column="0" Background="White" MouseDoubleClick="Elenco_MouseDoubleClick"/>

        <Button Grid.Row="0" Width="100" Height="50" HorizontalAlignment="Right" Margin="0,0,10,0" Click="Edit_Click"> New </Button>
            
    </Grid>
</Window>
